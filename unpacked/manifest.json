{
	"name": "Save All Resources",
	"version": "0.1.8",
	"description": "UP - Save all resources files with retaining folder structure.",
	"icons": {
    "128": "icon.gif"
	},
	"browser_action": {
    "default_icon": "icon.gif",
		"default_title": "UP",
		"default_popup": "popup.html"
  },
	"background": {
		"scripts": [
			"background.js"
		]
  },
	"permissions": [
		"tabs",
		"http://*/",
    "https://*/",
		"*://*/*",
		"downloads",
		"downloads.shelf"
	],
	"devtools_page": "devtool.html",
	"manifest_version": 2
}
